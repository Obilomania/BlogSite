@model BlogPost
@{
    ViewData["Title"] = "PostDetail";
}
<h1 class="text-center">Post Detail</h1>
<hr />
<div class="detail">
    <div class="image">
        <img src="@Model.ImageUrl" alt="" />
    </div>
    <div class="writeUp">
        <p><b>Title</b> : @Model.Title</p> 
        <p><b>Date</b> : @Model.Date</p>
        <p><b>Content</b> : @Model.Content</p>       
    </div>
</div>
<br /><br />
<div class="actionBtn" style="display:flex; justify-content:space-between">
    <a class="btn btn-secondary" asp-controller="BlogPost" asp-action="Index"><i class="bi bi-arrow-left">Back To List</i> </a> 
    <a class="btn btn-secondary" asp-controller="BlogPost" asp-action="EditPost" asp-route-id="@Model.Id"><i class="bi bi-pencil-square">Edit Post</i></a> 
</div>

